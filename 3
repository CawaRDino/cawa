  //Task3 
  int d;
  cout<<"\nInput day: "; cin>>d;
  if(d==1)cout<<"Monday";
  if(d==2)cout<<"Tuesday";
  if(d==3)cout<<"Wednesday";
  if(d==4)cout<<"Thursday";
  if(d==5)cout<<"Friday";
  if(d==6)cout<<"Saturday";
  if(d==7)cout<<"Sunday";
  if(d>7)cout<<"There is no such day of the week";


  cin.get();
  cin.get();
}
